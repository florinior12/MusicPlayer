<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transition"
    android:padding="10dip">
    <!--android:onClick="songPicked"-->


    <ImageView
        android:id="@+id/img_listitem_file"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/default_clipart"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_listitem_songname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Dummy File - Dummy Nigga0"
            android:textColor="@color/song_title_selector"
            android:textStyle="bold"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_listitem_artistname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:text="Dummy Singer"
                android:textColor="@color/artist_selector"/>

            <TextView
                android:id="@+id/txt_listitem_duration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:maxLines="1"
                android:text="4:20"
                android:textColor="#dcaadefa"

                 />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>